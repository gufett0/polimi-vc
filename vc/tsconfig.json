{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "node"],
    "incremental": true,
    "baseUrl": ".",  
    "paths": {
      "#compare": ["node_modules/uint8arrays/src/compare"],
      "#concat": ["node_modules/uint8arrays/src/concat"],
      "#from-string": ["node_modules/uint8arrays/src/from-string"],
      "#to-string": ["node_modules/uint8arrays/src/to-string"]
    }
  },
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}

